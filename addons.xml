<?xml version='1.0' encoding='UTF-8'?>
<addons><addon id="plugin.video.demostream" name="DemoStream" version="1.2.1" provider-name="Speed99">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Osobný WS player, ktorý využíva verejne dostupné informácie a spája ich</summary>
        <description lang="sk"> Komplexný KODI doplnok pre prehliadanie a prehrávanie filmov a
seriálov z osobnej databázy a služby Webshare. Na správne fungovanie je potrebné zadať prihlasovacie údaje do Webshare. </description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon><addon id="repository.demolator" name="Demolator Repository" version="1.0.0" provider-name="Speed99">
  <requires>
    <import addon="xbmc.addon" version="12.0.0" />
    <import addon="xbmc.python" version="3.0.0" /> 
  </requires>
  <extension point="xbmc.addon.repository" name="Demolator Repo">
    <dir>
      <info compressed="false">https://jdemovic.github.io/demokodi/addons.xml</info>
      <checksum>https://jdemovic.github.io/demokodi/addons.xml.md5</checksum>
      <datadir zip="true">https://jdemovic.github.io/demokodi/zips/</datadir>
    </dir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Demolator repo s doplnkom</summary>
    <description>Obsahuje DemoStream doplnok pre Kodi.</description>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart> 
    </assets>
  </extension>
</addon></addons>